<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/componentHeader"
            layout="@layout/component_header_dashboard"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <include
            android:id="@+id/componentFeatured"
            layout="@layout/component_featured_dashboard"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <include
            android:id="@+id/componentCategories"
            layout="@layout/component_categories_dashboard"
            android:layout_width="match_parent"
            android:layout_height="380dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>