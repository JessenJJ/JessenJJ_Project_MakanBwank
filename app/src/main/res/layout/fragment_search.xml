<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/gradientgreen"
    >




    <include
        android:id="@+id/componentSearchBar"
        layout="@layout/component_bar_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <include
        android:id="@+id/componentSearchList"
        layout="@layout/component_list_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/componentSearchBar"
        app:layout_constraintEnd_toEndOf="@+id/componentSearchBar"
        app:layout_constraintTop_toBottomOf="@id/componentSearchBar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>